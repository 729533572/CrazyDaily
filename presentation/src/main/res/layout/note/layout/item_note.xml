<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:background="@color/color_white"
        android:paddingEnd="@dimen/space_10"
        android:paddingStart="@dimen/space_10">

        <TextView
            android:id="@+id/item_note_date"
            style="@style/text_14_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            tools:text="2018年8月1日" />

        <ImageView
            android:id="@+id/item_note_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_more" />
    </RelativeLayout>

    <com.crazysunj.crazydaily.view.photo.PhotoPickerWrapLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.crazysunj.cardslideview.CardViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:card_loop="true"
            app:card_margin="0dp"
            app:card_max_offset="0dp"
            app:card_padding="0dp"
            app:card_scale_rate="0" />
    </com.crazysunj.crazydaily.view.photo.PhotoPickerWrapLayout>
</LinearLayout>