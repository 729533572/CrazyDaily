<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:background="@color/color_white"
        android:paddingStart="@dimen/space_10"
        android:paddingEnd="@dimen/space_10">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_note_date"
            style="@style/text_14_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            tools:text="2018年8月1日" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_note_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_more" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.crazysunj.crazydaily.view.photo.PhotoPickerWrapLayout
            android:id="@+id/item_note_type_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_note_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_note_images_indicator"
                style="@style/text_12_white"
                android:layout_width="@dimen/space_30"
                android:layout_height="@dimen/space_30"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/space_10"
                android:gravity="center"
                tools:background="@color/color_black"
                tools:text="1/2" />
        </com.crazysunj.crazydaily.view.photo.PhotoPickerWrapLayout>

        <FrameLayout
            android:id="@+id/item_note_type_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_240">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_note_video_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_player_center_start" />
        </FrameLayout>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_note_content"
        style="@style/text_12_333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:lineSpacingExtra="@dimen/space_4"
        android:padding="@dimen/space_10"
        tools:text="梦想粉色小屋，纯真少女感，分分钟秒杀网上的网红书坊，漫画里的仙境，居然就在你的身边找到啦～走过路过千万不要错过，人生难得几闻，一生一定要拍一…" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_10"
        android:background="@color/color_eeeeee" />
</LinearLayout>