<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="84.5dp"
    android:background="@drawable/shape_bucket_item_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/space_70"
        android:layout_height="@dimen/space_70">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_bucket_icon"
            android:layout_width="@dimen/space_70"
            android:layout_height="@dimen/space_70" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_bucket_video_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_player_center_start"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_bucket_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_10"
        android:layout_weight="1"
        android:lineSpacingExtra="@dimen/space_10" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_bucket_select_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_20"
        android:src="@drawable/shape_bucket_item_select"
        android:visibility="invisible"
        tools:visibility="visible" />
</LinearLayout>