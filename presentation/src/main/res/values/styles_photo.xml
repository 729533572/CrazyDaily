<resources>

    <style name="PhotoTheme" parent="AppTheme.NoActionBar">
        <item name="drawerArrowStyle">@style/PhotoTheme.DrawerArrowToggle</item>
        <item name="colorControlNormal">@color/color_white</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="PhotoTheme.MenuTheme">
        <item name="overlapAnchor">false</item>
        <item name="android:itemBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="PhotoTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/color_white</item>
    </style>
</resources>
