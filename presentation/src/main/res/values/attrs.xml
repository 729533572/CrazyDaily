    <attr name="satellite_menu_radius" format="dimension" />
    <attr name="satellite_menu_size" format="dimension" />
    <attr name="satellite_menu_direction" format="integer">
        <enum name="right_bottom" value="0" />
        <enum name="left_bottom" value="1" />
        <enum name="left_top" value="2" />
